{
  "author": "The Paypr Company",
  "name": "@paypr/ethereum-contracts",
  "description": "",
  "license": "GPL-3.0",
  "version": "0.4.5",
  "homepage": "https://paypr.money/",
  "repository": {
    "type": "git",
    "url": "https://github.com/paypr/ethereum-contracts"
  },
  "bugs": {
    "url": "https://github.com/paypr/ethereum-contracts/issues"
  },
  "files": [
    "artifacts",
    "contracts",
    "dist",
    "src",
    "CHANGELOG.md",
    "README.md"
  ],
  "scripts": {
    "clean": "rm -rf build && rm -rf dist && rm -rf out && rm -rf types && rm -rf artifacts && rm -rf cache",
    "compile:contracts": "hardhat compile && npm run pretty",
    "build": "npm run compile:contracts && tsc && npm run copy-declarations",
    "build:watch": "tsc --watch",
    "copy-declarations": "cp -R types dist",
    "rebuild": "npm run clean && npm run build",
    "test": "jest",
    "posttest": "npm run lint",
    "lint": "solhint 'contracts/**/*.sol' && eslint",
    "pretty": "pretty-quick",
    "network:development": "ganache-cli --deterministic --db tmp/network",
    "release": "standard-version",
    "prepublishOnly": "npm run rebuild && npm run release",
    "ci-prepare": "cp example.secrets.json .secrets.json"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "pre-push": "npm run lint"
    }
  },
  "dependencies": {
    "@openzeppelin/contracts": "4.7.2",
    "ethers": "5.6.9"
  },
  "devDependencies": {
    "@ethereum-waffle/jest": "3.3.2",
    "@nomiclabs/hardhat-ethers": "2.1.0",
    "@nomiclabs/hardhat-etherscan": "3.1.0",
    "@nomiclabs/hardhat-waffle": "2.0.3",
    "@poanet/solidity-flattener": "3.0.7",
    "@typechain/ethers-v5": "10.1.0",
    "@typechain/hardhat": "4.0.0",
    "@types/jest": "27.5.2",
    "@types/node": "16.11.47",
    "@typescript-eslint/eslint-plugin": "5.31.0",
    "@typescript-eslint/parser": "5.31.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.20.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-prettier": "4.2.1",
    "ethereum-waffle": "3.4.4",
    "ganache-cli": "6.12.2",
    "hardhat": "2.10.1",
    "husky": "8.0.1",
    "jest": "27.5.1",
    "jest-extended": "1.2.1",
    "jest-junit": "13.2.0",
    "prettier": "2.7.1",
    "prettier-plugin-solidity": "1.0.0-dev.23",
    "pretty-quick": "3.1.3",
    "solhint": "3.3.7",
    "solhint-plugin-prettier": "0.0.5",
    "standard-version": "9.5.0",
    "ts-generator": "0.1.1",
    "ts-jest": "27.1.5",
    "ts-node": "10.9.1",
    "tsutils": "3.21.0",
    "typechain": "7.0.1",
    "typescript": "4.7.4"
  },
  "engines": {
    "npm": ">=7.20",
    "node": ">=16.5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "standard-version": {
    "issueUrlFormat": "https://github.com/paypr/CHANGEME/issues/{{id}}",
    "issuePrefixes": [
      "#"
    ],
    "scripts": {
      "postchangelog": "npm run pretty"
    }
  }
}
